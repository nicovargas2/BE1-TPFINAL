<style>
    body {
        background-color: #f8f9fa;
    }

    .hero-section {
        background: linear-gradient(rgba(51, 51, 51, 0.8), rgba(51, 51, 51, 0.8)),
            url('https://source.unsplash.com/1600x900/?logistics,transport') no-repeat center center;
        background-size: cover;
        color: white;
        padding: 4rem 0;
        text-align: center;
        height: 80vh;
    }

    .form-container {
        position: absolute;
        top: 20px;
        left: 20px;
        background-color: white;
        padding: 1rem;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .btn-primary-custom {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary-custom:hover {
        background-color: #0056b3;
        border-color: #004085;
    }
</style>

<div class="container-fluid">
    <div class="form-container">
        <h4 class="text-center mb-3">Log In</h4>
        {{#if error}}
        <p>{{error}}</p>
        {{/if}}
        <form action="/api/users/login" method="get" id="loginForm">
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <button type="submit" class="btn btn-primary-custom w-100">Log In</button>
            <div class="text-center mt-3">
                <a href="/views/register" class="text-muted">Don't have an account? Register here</a>
            </div>
        </form>
    </div>

    <div class="hero-section d-flex justify-content-center align-items-center">
        <div>
            <h1 class="display-4"><b>Logistics Master</b></h1>
            <p class="lead">Efficient and reliable logistics for a connected world.</p>
            <a href="#" class="btn btn-primary-custom btn-lg">Learn More</a>
        </div>
    </div>
</div>

</html>